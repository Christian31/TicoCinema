@model IEnumerable<TicoCinema.WebApplication.Models.MovieFormat>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.MovieFormatId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.MovieFormatId })
            </td>
        </tr>
    }

</table>