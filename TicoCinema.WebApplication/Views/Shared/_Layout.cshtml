<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>@ViewBag.Title - Tico Cinema</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="robots" content="all,follow">

    @Styles.Render("~/Content/bootstrap")
    @Styles.Render("~/Content/vendors")
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:300,400,700">
    @Styles.Render("~/Content/cssjqryui")
    @Styles.Render("~/Content/css")

    <!-- Favicon and apple touch icons-->
    <link rel="shortcut icon" href="img/favicon.ico" type="image/x-icon">
    <link rel="apple-touch-icon" href="img/apple-touch-icon.png">
    <link rel="apple-touch-icon" sizes="57x57" href="img/apple-touch-icon-57x57.png">
    <link rel="apple-touch-icon" sizes="72x72" href="img/apple-touch-icon-72x72.png">
    <link rel="apple-touch-icon" sizes="76x76" href="img/apple-touch-icon-76x76.png">
    <link rel="apple-touch-icon" sizes="114x114" href="img/apple-touch-icon-114x114.png">
    <link rel="apple-touch-icon" sizes="120x120" href="img/apple-touch-icon-120x120.png">
    <link rel="apple-touch-icon" sizes="144x144" href="img/apple-touch-icon-144x144.png">
    <link rel="apple-touch-icon" sizes="152x152" href="img/apple-touch-icon-152x152.png">
    <!-- Tweaks for older IEs-->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script><![endif]-->
</head>
<body>
    <div id="all">
        <!-- Top bar-->
        <div class="top-bar">
            <div class="container">
                <div class="row d-flex align-items-center">
                    <div class="col-md-6 d-md-block d-none">
                        <p>Contáctenos al +506 2930 4059 o al info@ticocinema.com.</p>
                    </div>
                    <div class="col-md-6">
                        <div class="d-flex justify-content-md-end justify-content-between">
                            <ul class="list-inline contact-info d-block d-md-none">
                                <li class="list-inline-item"><a href="#"><i class="fa fa-phone"></i></a></li>
                                <li class="list-inline-item"><a href="#"><i class="fa fa-envelope"></i></a></li>
                            </ul>
                            @Html.Partial("_LoginPartial")
                            <ul class="social-custom list-inline">
                                <li class="list-inline-item"><a href="#"><i class="fa fa-facebook"></i></a></li>
                                <li class="list-inline-item"><a href="#"><i class="fa fa-google-plus"></i></a></li>
                                <li class="list-inline-item"><a href="#"><i class="fa fa-twitter"></i></a></li>
                                <li class="list-inline-item"><a href="#"><i class="fa fa-envelope"></i></a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Top bar end-->
        <!-- Navbar Start-->
        <header class="nav-holder make-sticky">
            <div id="navbar" role="navigation" class="navbar navbar-expand-lg">
                <div class="container">
                    <a href="@Url.Action("Index", "Home")" class="navbar-brand home"><img src="img/logo.png" alt="logo" class="d-none d-md-inline-block"><img src="img/logo-small.png" alt="logo" class="d-inline-block d-md-none"><span class="sr-only">Tico cinema - ir a Inicio</span></a>
                    <button type="button" data-toggle="collapse" data-target="#navigation" class="navbar-toggler btn-template-outlined"><span class="sr-only">Toggle navigation</span><i class="fa fa-align-justify"></i></button>
                    <div id="navigation" class="navbar-collapse collapse">
                        <ul class="nav navbar-nav ml-auto">
                            @{bool displayPublicOptions = true; }
                            @if (Request.IsAuthenticated)
                            {
                                if (User.IsInRole("Admin"))
                                {
                                    displayPublicOptions = false;
                                    <li class="nav-item">@Html.ActionLink("Usuarios", "Index", "Users")</li>
                                    <li class="dropdown">
                                        <a href="javascript: void(0)" data-toggle="dropdown" class="dropdown-toggle">Configuración de cine<b class="caret"></b></a>
                                        <ul class="dropdown-menu">
                                            <li class="dropdown-item"><a href="@Url.Action("Index", "MovieFormats")" class="nav-link">Formatos</a></li>
                                            <li class="dropdown-item"><a href="@Url.Action("Index", "MovieCategories")" class="nav-link">Categorias</a></li>
                                            <li class="dropdown-item"><a href="@Url.Action("Index", "AudienceClassifications")" class="nav-link">Clasificación de audiencia</a></li>
                                            <li class="dropdown-item"><a href="@Url.Action("Index", "Cinemas")" class="nav-link">Salas</a></li>
                                        </ul>
                                    </li>
                                    <li class="dropdown">
                                        <a href="javascript: void(0)" data-toggle="dropdown" class="dropdown-toggle">Películas<b class="caret"></b></a>
                                        <ul class="dropdown-menu">
                                            <li class="dropdown-item"><a href="@Url.Action("Index", "Movies")" class="nav-link">Registro</a></li>
                                            <li class="dropdown-item"><a href="@Url.Action("Index", "MoviePrices")" class="nav-link">Precios</a></li>
                                            <li class="dropdown-item"><a href="@Url.Action("Index", "CinemaSchedules")" class="nav-link">Calendarización</a></li>
                                        </ul>
                                    </li>
                                    <li class="dropdown">
                                        <a href="javascript: void(0)" data-toggle="dropdown" class="dropdown-toggle">Comidas<b class="caret"></b></a>
                                        <ul class="dropdown-menu">
                                            <li class="dropdown-item"><a href="@Url.Action("Index", "Foods")" class="nav-link">Registro</a></li>
                                            <li class="dropdown-item"><a href="@Url.Action("Index", "FoodInventary")" class="nav-link">Inventario</a></li>
                                        </ul>
                                    </li>
                                }
                                if (User.IsInRole("Guest"))
                                {
                                    <li class="nav-item"><a href="@Url.Action("Index", "CinemaSchedule")" class="nav-link">Cartelera</a></li>
                                    <li class="nav-item"><a href="@Url.Action("Index", "Food")" class="nav-link">Comidas</a></li>
                                }
                            }

                            @if (displayPublicOptions)
                            {
                                <li class="nav-item">@Html.ActionLink("Acerca de", "About", "Home")</li>
                                <li class="nav-item">@Html.ActionLink("Contacto", "Contact", "Home")</li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </header>
        <!-- Navbar End-->

        <div class="container body-content">
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - Tico Cinema</p>
            </footer>
        </div>
    </div>

    @Scripts.Render("~/Scripts/jquery-3.3.1.min.js")
    <script src="~/Scripts/popper.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery.cookie.js"></script>
    <script src="~/Scripts/jquery.waypoints.min.js"></script>
    <script src="~/Scripts/jquery.counterup.min.js"></script>
    <script src="~/Scripts/owl.carousel.min.js"></script>
    <script src="~/Scripts/owl.carousel2.thumbs.min.js"></script>
    <script src="~/Scripts/jquery.parallax-1.1.3.js"></script>
    <script src="~/Scripts/bootstrap-select.min.js"></script>
    <script src="~/Scripts/jquery.scrollTo.min.js"></script>
    <script src="~/Scripts/front.js"></script>
    <script src="~/Scripts/jquery-ui.js"></script>

    @RenderSection("scripts", required: false)
</body>
</html>